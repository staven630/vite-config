{
  "name": "vite-config",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --mode dev",
    "stage": "vite --mode stage",
    "prod": "vue-tsc --noEmit && vite build --mode prod",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint:js": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:css": "stylelint src/**/*.{css,scss,vue}"
  },
  "dependencies": {
    "ant-design-vue": "^2.2.8",
    "element-plus": "^1.2.0-beta.3",
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vitejs/plugin-vue-jsx": "^1.3.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@zougt/some-loader-utils": "^1.4.0-beta.5",
    "@zougt/vite-plugin-theme-preprocessor": "^1.4.0",
    "color": "^4.1.0",
    "eslint": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.1.1",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "unplugin-element-plus": "^0.1.3",
    "unplugin-vue-components": "^0.17.2",
    "vite": "^2.6.4",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-externals": "^0.3.0",
    "vite-plugin-svg-icons": "^1.0.5",
    "vite-plugin-vue-setup-extend": "^0.1.0",
    "vue-tsc": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
